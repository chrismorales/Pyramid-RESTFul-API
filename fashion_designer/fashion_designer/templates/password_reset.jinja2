{% extends 'mytemplate.jinja2' %}
{% block passwordReset %}
	<form class="form-password-reset" role="form" method="POST">
		<h2 class="form-pass-reset-heading">Change your password</h2>
		{% if error %}
			<div class="alert alert-danger" role="alert">
      			<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      			<span class="sr-only">Error:</span>
      			{{ error }}
    		</div>	
		{% endif %}
		<label for="inputEmail" class="sr-only">Email</label>
    	<input type="email" id="inputEmailPassword" name="email" class="form-control" placeholder="Email address" required autofocus>
    	<h2 class="spacer"></h2>
    	<button class="btn btn-lg btn-primary btn-block" type="submit" name="form.submitted">Continue</button>
	</form>
{% endblock %}