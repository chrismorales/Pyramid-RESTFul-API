{% block register %}
<form id="login" class="form-signin" role="form" method="POST">
    <h2 class="form-login-heading">Register</h2>
    {% if error %}
    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">Error:</span>
      {{ error }}
    </div>
    {% endif %}
    <div class="form-group row">
        <input type="text" id="inputUsername" name="username" class="form-control" placeholder="Username" required autofocus>
    </div>
    <div class="form-group row">
        <input type="password" id="inputPswd" name="password" class="form-control" placeholder="Password" required autofocus>
    </div>
    <div class="form-group row">
        <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email" required autofocus>
    </div>
    <label class="checkbox pull-left">
        <input type="checkbox" value="remember-me">
        Remember me
    </label>
    <h2 class="spacer"></h2>
    <button class="btn btn-lg btn-primary btn-block" type="submit" name="register_form.submitted">Submit</button>
</form>

</div>
{% endblock %}
